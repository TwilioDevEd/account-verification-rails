<!DOCTYPE html>
<html>
  <head>
    <title>Account Verification with Ruby on Rails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'stylesheets/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'javascript/application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/authy-forms.css/2.2/form.authy.min.css', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/authy-forms.js/2.2/form.authy.min.js', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <div class="navbar-header"><a class="navbar-brand" href="/">Account Verification</a></div>
        <div>
          <ul class="nav navbar-nav mr-auto">
            <li class="nav-item active"><a class="nav-link" href="/">Home</a></li>
            <p id="nav-links" class="navbar-text my-2 my-lg-0">
              <%= link_to "Sign Up", new_user_path %>
            </p>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <%= flash_messages %>
      <div class="row pt-3">
        <div class="col">
          <%= yield %>
        </div>
      </div>
      <footer>Made with ❤️ by your pals
        <a href="http://www.twilio.com">@twilio</a></footer>
    </div>
  </body>
</html>
